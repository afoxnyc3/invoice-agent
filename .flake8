[flake8]
max-line-length = 120

# Ignore Black-compatible formatting rules
extend-ignore = E203, W503, E501

exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    src/venv,
    src/.python_packages,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox

per-file-ignores =
    __init__.py:F401
